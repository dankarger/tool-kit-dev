generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}


model Example {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}


model ChatMessage {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    message String @db.VarChar(500)
    response  String @db.VarChar(1500)
    authorId String

    @@index([authorId])
}